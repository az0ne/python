<div class="head-container">
    <div class="header">
        <div class="wrap">
            <a class="logo fl" href="/" onclick="zhuge.track('点击header-logo')">
                <h2>
                    <img src="/images/index/logo_greenx2.png" alt="logo">
                </h2>
            </a>
            <div class="search-box">
                <div class="header-search">
                    <input type="text" name="datasearch" autocomplete="off" class="data-search font12" id="data-search" placeholder="搜索你感兴趣的课程"aria-haspopup="false" role="combobox" aria-owns="dd_box" aria-autocomplete="list" value="{{ ori_keyword }}">
                    <button class="search-btn"></button>
                    <div class="hot-words">
                        <a href="/search/course/产品经理-1/" target="_blank">产品经理</a>
                        <a href="/search/course/web前端-1/" target="_blank">web前端</a>
                        <a class="last" href="/search/course/ui-1/" target="_blank">ui</a>
                    </div>
                    <dl class="fLayerdl" id="fLayerdl" style="max-height: 180px; overflow-y: auto; display: none;">
                        <dd val="产品经理" v2="undefined">
                            <a href="/search/course/产品经理-1/" target="_blank">产品经理</a>
                        </dd>
                        <dd val="web前端" v2="undefined">
                            <a href="/search/course/web前端-1/" target="_blank">web前端</a>
                        </dd>
                        <dd val="UI设计" v2="undefined">
                            <a href="/search/course/UI设计-1/" target="_blank">UI设计</a>
                        </dd>
                        <dd val="Python" v2="undefined">
                            <a href="/search/course/Python-1/" target="_blank">Python</a>
                        </dd>
                        <dd val="运营" v2="undefined">
                            <a href="/search/course/运营-1/" target="_blank">运营</a>
                        </dd>
                    </dl>
                    <div class="dd_listbox" id="dd_listbox" role="listbox" aria-expanded="true" id="dd_box" style="display: none;">
                        <div class="dd_courseitem dd_csitem" id="dd_csitem">职业课程<i></i></div>
                        <div class="incld_careers" id="incld_careers"></div>
                        <div class="dd_courseitem dd_tutor" id="dd_tutor">职业导师<i></i></div>
                        <div class="incld_teachers" id="incld_teachers"></div>
                        <div class="dd_courseitem dd_craft" id="dd_craft">职业技能<i></i></div>
                        <div class="course_name_ledg" id="course_name_ledg"></div>
                    </div>
                </div>
            </div>

            <div class="topRight" login="{{ user.is_authenticated }}">

                <a class="mobile_app fl" href="/common/apppage/" target="_blank"></a>
                {% if not user.is_authenticated %}
                <div class="sign-box fl"><a class="a register" href="/user/signup/" target="_blank">注册</a><a class="a globalLoginBtn">登录</a></div>
                {% else %}
                <div class="top_user fl">
                    <a class="top_meg top_megH" href="{% url 'home:base:get_my_message' %}" target="_blank">{% if not new_message_count == 0 %}<i class="Arial">{{ new_message_count }}</i>{% endif %}</a>
                    <a class="ai" href="/home/" target="_blank"><img src="{{ MEDIA_URL }}{{ user.avatar_url }}"></a>
                    <span class="nick_name">
                        <a class="nick" href="/home/" target="_blank" data-name="{{ user.nick_name }}"></a>
                        <a class="sign_out" href="/user/logout/">退出</a>
                    </span>
                </div>
                {% endif %}
            </div>

        </div>
    </div>
</div>
