{% extends "mz_nadmin/base.html" %}


{% block right %}
{% include "mz_nadmin/parts/courses_breadcrumb.html" %}

<div class="tabbable">
{% include "mz_nadmin/parts/stage_tabs.html" %}

<div class="tab-content">
<div class="tab-pane active">

    {% include "mz_nadmin/modules/msgs.html" %}
    {% include "mz_nadmin/modules/form_alert.html" %}

    {% if is_stage_edit %}
    <form class="form-horizontal" role="form"
        action="{% url 'nadmin:stages_edit' career_course.id stage.id %}" method="post">
    {% else %}
    <form class="form-horizontal" role="form"
        action="{% url 'nadmin:stages_create' career_course.id %}" method="post">
    {% endif %}

    {% csrf_token %}

    <div class="form-group {% if form.name.errors %}has-error{% endif %}">
        <label class="col-md-2 control-label" for="search_keywords">
            {{ form.name.label }}
        </label>
        <div class="col-md-5">
            {{ form.name }}
            <span class="help-block">
            {% for error in form.name.errors %}
                {{ error }}
            {% endfor %}
            </span>
        </div>
    </div>

    <div class="form-group {% if form.price.errors %}has-error{% endif %}">
        <label class="col-md-2 control-label" for="search_keywords">
            {{ form.price.label }}
        </label>
        <div class="col-md-2">
            {{ form.price }}
            <span class="help-block">
            {% for error in form.price.errors %}
                {{ error }}
            {% endfor %}
            </span>
        </div>
    </div>

    <div class="form-group {% if form.description.errors %}has-error{% endif %}">
        <label class="col-md-2 control-label" for="description">
            {{ form.description.label }}
        </label>
        <div class="col-md-8">
            {{ form.description }}
            <span class="help-block">
            {% for error in form.description.errors %}
                {{ error }}
            {% endfor %}
            </span>
        </div>
    </div>

    <div class="row">
        <hr>
    </div>

    <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">
            <button type="submit" class="btn btn-sm btn-primary">保存</button>
        </div>
    </div>
</form>
</div>
</div>
</div>

{% endblock %}


