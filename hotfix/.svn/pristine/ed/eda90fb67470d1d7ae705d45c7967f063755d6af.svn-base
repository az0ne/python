{% extends "mz_nadmin/base.html" %}


{% block right %}
{% include "mz_nadmin/parts/student_breadcrumb.html" %}

<div class="tabbable">
{% include "mz_nadmin/parts/student_tabs.html" %}

<div class="tab-content">
    <div class="tab-pane active">

        {% include "mz_nadmin/modules/msgs.html" %}

        {% if courses %}
        <div class="table-responsive">
            <table class="table table-bordered table-condensed table-striped table-hover">
                <thead>
                    <th class="col-md-6">课程名称</th>
                    <th class="col-md-6">最后观看章节数</th>
                </thead>
                <tbody>
                    {% for course in courses %}
                    <tr>
                        <td>
                            {{ course.name }}
                        </td>
                        <td>
                            {{ course.recent_learned_lesson }}
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% else %}
        <p class="text-muted">
            <small>没有任何课程</small>
        </p>
        {% endif %}

    </div>
</div>
</div>
{% endblock %}



