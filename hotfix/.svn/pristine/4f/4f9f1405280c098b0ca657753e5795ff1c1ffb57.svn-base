.footer-container {
    background: #ecebeb;
    .copyright {
        width: 100%;
        height: 78px;
        padding: 20px 0;
        border-top: 1px solid #d5d5d5;
    }
    .copyright-box {
        width: 1116px;
        margin: 0 auto;
        position: relative;
        &:before {
            content: '';
            display: block;
            width: 129px;
            height: 68px;
            position: absolute;
            left: 0;
            right: 0;
            top: -84px;
            margin: 0 auto;
            background: url(../images/index/footer_flower.png) 0 0 no-repeat;
        }
        .ps-left {
            width: 284px;
            height: 40px;
            position: absolute;
            left: 0;
            top: 0;
        }
        .ps-right {
            position: absolute;
            right: 110px;
            top: 0;
        }
        .industry-validate{
            position: absolute;
            right: 0;
            top: 0;
            height: 40px;
            width: 90px;
            padding-top: 3px;
        }
    }
}
.v5-footer-links {
    padding: 20px 0 90px 20px;
    display:table;
    width: 1116px;
    margin: 0 auto;
    &:before, &:after {
        @extend .CLEARFIX;
    }
    dl {float: left;}
    dt {
        font-size: 14px;
        height: 45px;
        line-height: 45px;
        color: #737373;
        font-weight: bold;
    }
    .f-link {
        width: 480px;
        ul {
            padding-top: 5px;
        }
        li {
            font-size: 14px;
            line-height: 24px;
            padding-bottom: 16px;
            a {
                float: left;
                margin-right: 10px;
                color:#a6a6a6;
                font-size: 12px;
                &:hover {color: #01c26f;}
            }
            span {
                float: left;
                margin: 0 5px;
            }
        }
    }

    .webmap,.follow {
        float: right;
        margin-left: 70px;
    }
    .webmap{
        width: 204px;
        margin-left: 0;
        li {
            line-height: 25px;
            float: left;
            width: 102px;
            a{
                color:#999999;
                &:hover {
                    color: #01c26f;
                }
            }
        }
    }
    .follow{
        padding-left: 45px;
        margin-left: 20px;
        li {
            float: left;
            text-align: center;
            color:#999999;
            height: 166px;
            p{
                line-height: 1.4; 
                margin-bottom: 10px;
            }
            a {
                display: inline-block;
                height: 24px;
                line-height: 24px;
                color:#999999;
                &:hover {
                    color: #01c26f;
                }
                span {
                    float: left;
                    width: 24px;
                    height: 24px;
                    margin-right: 10px;
                    background: url(../images/follow.png) no-repeat;
                    &.sina {
                        background-position: 0 0;
                    }
                    &.weixin {
                        background-position: 0 -30px;
                    }
                    &.qq {
                        background-position: 0 -60px;
                    }
                }
            }
        }
    }
}
.v5-footer-bottom {
    padding: 20px 0;
    color: #999999;
    &:after,&:before {content:'';clear: both;display: table;}
    a{
        color: #999999;
    }
}

/* 文章列表页 footer 样式 */
.article_footer {
    background: rgba(56, 54, 55, 1);
    .container {
        width: 1160px;
        margin: 0 auto;
    }
    .footer-logo,.webmap {
        float: left;
    }
    .webmap {
        margin-left: 40px;
        text-align: left;
        a {padding: 0 10px;color: #999999;}
        a:first-child {padding-left: 0;}
    }
    .hot-line {
        float: right;
        .weixin-qrcode,.weibo-qrcode,.sevenDaysRefunds:before {
            outline: none;width: 34px;height: 34px;
            background: url(../images/article_Icon.png) 0 0 no-repeat;
        }
        span, a {
            display: inline-block;
            vertical-align: top;
        }
        .weixin-qrcode {
            background-position: 0 0;
            margin-left: 50px;
            position: relative;
            .weixin-box {
                position: absolute;
                width: 118px;
                height: 127px;
                bottom: 36px;
                right: -42px;
                -webkit-transition: opacity 0.25s, transform .3s;
                -moz-transition: opacity 0.25s, transform .3s;
                transition: opacity 0.25s, transform .3s;
                opacity: 0;
                filter: alpha(opacity=0);
                max-width: 0;
                -webkit-transform: scale(0.01);
                -ms-transform: scale(0.01);
                transform: scale(0.01);
                -webkit-transform-origin: center bottom;
                -ms-transform-origin: center bottom;
                transform-origin: center bottom;
                background: url(../images/weixin3.png) no-repeat 0 0;
            }
            &:hover {
                background-position: 0 -40px;
                .weixin-box {
                    display: block;
                    visibility: visible;
                    opacity: 1;
                    filter: alpha(opacity=100);
                    max-width: none;
                    -webkit-transform: scale(1);
                    -ms-transform: scale(1);
                    transform: scale(1);
                }
            }
        }
        .weibo-qrcode {
            background-position: 0 -80px;
            margin-left: 20px;
            &:hover {
                background-position: 0 -120px;
            }
        }
        .sevenDaysRefunds{
            color:#69d5c2;
            font-size: 12px;
            margin-left: 10px;
            &:before{
                width:24px;
                content: "";
                display: block;
                background-position: 0 -610px;
                margin: 0 auto;
            }
        }
    }
}