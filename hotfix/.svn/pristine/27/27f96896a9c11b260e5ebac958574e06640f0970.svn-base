@import 'core/reset';
@import 'core/common';
@import 'core/var';
@import 'core/function';

@import 'header';
@import 'toolbar';
.course-detail {
	background-color: #f5f5f5;
	@extend .font14;
	.head-container {
		border-bottom: 1px solid #ddd;
		box-shadow: 0 3px 8px rgba(0, 0, 0, 0.2);
	}
	.breadcrumb {
		padding: 20px 0;
		margin-bottom: 0;
		background-color: transparent;
		li {
			display: inline-block;
		}
		a {
			color: #777;
		}
		li + li:before {
			content: ">";
			padding: 0 5px;
			color: #ccc;
		}
	}
	.btn-xlg {
		padding: 15px 30px;
		font-size: 16px;
		line-height: 1.33;
		border-radius: 2px;
		&:hover {
			color: #fff;
			background-color: #59b2a1;
			border-color: #68c8b6;
		}
	}
	.course-stage {
		background-color: #fff; 
		margin-bottom: 60px;
		section {
			margin: 40px 30px 0;
			border-bottom: #EEEEEE solid 1px;
			padding-bottom: 20px;
			&:last-child {
				border-bottom: none;
			}
			@media (max-width: 991px) { 
				margin-right: 15px; 
				margin-left: 15px;
			}
		}
	}
	.course-stage-lead {
		padding-bottom: 22px;
		padding-top: 25px;
		padding-left: 30px; 
		padding-right: 30px;
		.course-stage-dl {
			padding: 0 0 20px;
		}
	}
	.course-stage-dl {
		dt {
			font-size: 20px;
			color: #1BBC9B;
			font-weight: normal;
		}
		dd {
			line-height: 24px;
			color: #797979;
			padding-top: 6px;
		}
	}
	.zy_cd_new {
		line-height: 53px;
		color: #666666;
		& > div {
			@extend .fr;
		}
		span {
			margin-right: 30px;
			img {
				margin-right: 10px;
			}
		}
	}
	.course-stage-item, .other-course {
		article {
			padding: 0 15px;
			margin-top: 20px;
			margin-bottom: 10px;
			.lead-img {
				font-size: 0;
				vertical-align: middle;
				position: relative;
				height: 220px; 
			}
			img {
				width: 100%;
				height: 100%;
				opacity: 1;
				filter: alpha(opacity=100);
			}
			.artc-bt {
				border: #E7E7E7 solid 1px;
				height: 94px;
				padding: 18px 18px 0 18px;
			}
			h3 {
				font-size: 16px;
				width: 100%;
				margin-bottom:8px;
				height: 18px;
				overflow: hidden;
			}
			p {
				line-height: 19px;
				color: #7C7C7C;
				i {
					@extend .fl;
					margin-right: 10px;
				}
			}
		}
	}


	.other-course {
		article {
			img:hover {
				opacity: 0.7;
				filter: alpha(opacity=70);
			}
		}
		.lead-img {
			position: relative;
			overflow-y: hidden;
		}
	}
	.course-stage-state {
		position: absolute;
		top: 5px;
		right: 5px;
		z-index: 10;
	}
	.course-stage-item {
		article {
			.lists{
				position: relative;
				height: 314px;
				.description {
					display: none;
					max-height: 36px;
					overflow: hidden;
				}
				p.row{
					color: #999;
					padding-top:6px;
				}
				.lead-img:hover, &:hover .artc-bt {
					@include box-shadow(0 13px 14px rgba(0,0,0,.2));
				}
				.artc-bt {
					width:340px;
					position:absolute;
					padding-bottom: 25px;
					z-index: 99;
					background: #fff;
				}
				&:hover {
					h3, h3 a {
						color: #4abfa9;
					}
					.artc-bt {
						height: auto;
					}
				}
			}
		}
	}
	.community_news {
		padding: 0 32px;
		.warp {
			margin: 40px auto 0;
			padding-bottom: 50px;
			box-sizing: border-box;
			h2, p {
				text-align: center;
			}
			h2 {
				font-weight: bold;
				margin-bottom: 10px;
			}
			ul {
				overflow: hidden;
				margin-top:16px;
				& > li { 
					width: 340px;
					float: left;
					margin-right: 28px;
					&:last-child {
						margin-right: 0;
					}
					& > a {
						width: 340px;
						height: 220px;
						display: block;
						position: relative;
						margin-bottom: 20px;
						color: #ffffff;
						font-size: 14px;
						i {
							font-style: normal;
							margin-right: 10px;
							&:after {
								content: '|';
								@extend .vam;
								margin-left: 10px;
								margin-top: -4px;
							}
						}
						img {
							width: 346px;
							height: 220px;
						}
						span {
							display: block;
							height: 40px;
							line-height: 40px;
							width: 100%;
							position: absolute;
							left: 0;
							bottom: 0;
							padding: 0 20px;
							@extend .substr;
							background: rgba(0, 0, 0, 0.3);
						}
					}
				}
			}
			ol {
				li {
					margin-bottom: 10px;
					a {
						color: #666666;
						font-size: 14px;
						width: 94%;
						@extend .vam;
						@extend .substr;
					}
					&:before {
						content: 'Â·';
						width: 0;
						@extend .vam;
						font-size: 14px;
						margin-right: 10px;
					}
				}
			}
		}

	}

	.friendLinks {
		padding:0 32px;
		.title {
			height: 30px;
			line-height: 29px;
			border-bottom: 1px solid #a0a0a0;
			color:#666;
			font-size: 16px;
			span {
				padding:0 14px;
				cursor: pointer;
				border: 1px solid #fff;
			}
			.active {
				border-color:#a0a0a0;
				border-bottom-color: #fff;
				border-radius: 5px 5px 0 0;
				display: inline-block;
				background: #fff;
			}
		}
		.content {
			padding: 10px 10px 60px;
		}
		.nav {
			display: none;
			a{
				margin:0 5px;
				line-height: 22px;
				color: #666;
			}
		}
	}
	.zy_rightBoxDD {
		position: absolute;
		right: 0; top: 0;
	}
	.zy_rightBox {
		position: fixed;
		width: 40px;
		top: 50%;
		margin-left: 10px;
		margin-top: -155px;
		li {
			width: 100%;
			color: #999999;
			cursor: pointer;
			margin-bottom: 10px;
			position: relative;
			a {
				height: 40px;
				width: 100%;
				display: block;
				color: #ffffff;
				background: #d7d7d7;
				overflow: hidden;
				border-radius: 50%;
				text-align: center;
				line-height: 40px;
				font-size: 20px;
			}
			& > p { 
				position: absolute;
				top: 2px;
				right: 50px;
				word-break: keep-all;
				white-space: nowrap;
				display: none;
				background: rgba(0, 0, 0, 0.5);
				color: #ffffff;
				font-size: 14px;
				padding: 10px;
				&:after {
					content: '';
					position: absolute;
					top: 12px;
					right: -8px;
					display: block;
					border-top: 8px solid transparent;
					border-bottom: 8px solid transparent;
					border-left: 8px solid rgba(0,0,0,0.5);
				}
			}
			&:hover, &.liH {
				& > a {
					background: #5ecfba;
				}
			}
			&:hover {
				& > p { display: inline-block; }
			}
		}		
	}
}
@import 'footer';