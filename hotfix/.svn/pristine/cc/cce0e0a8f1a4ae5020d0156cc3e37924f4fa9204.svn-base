@import 'core/reset';
@import 'core/common';
@import 'core/var';
@import 'core/function';

@import 'header';
@import 'toolbar';
.app-page {
	.microoh-main {
		padding-bottom: 0;
	}
	.head-container {
		border-bottom: 1px solid #ddd;
		box-shadow: 0 3px 8px rgba(0, 0, 0, 0.2);
	}
	.app-banner { 
		height: 600px;
		position: relative;
		background: url(../images/app_page/app-banner-bg.jpg) repeat-x;
	}
	.app-banner > div.container {
	    position: relative;
	    height: 600px;
	    background: url(../images/app_page/app-banner.jpg) no-repeat right;
	}
	.app-container { 
		background-color: #fff;
		position: relative;
		padding: 70px 15px 0;
	}

	.app-container div { 
		width: 100%;
		text-align: center;
	}

	.app-bt {
	    width: 100%;
	    height: 11px;
	    position: absolute;
	    left: 0;
	    bottom: 0;
	    z-index: 99;
	    background: url(../images/app_page/app-boxbg.png) repeat-x bottom;
	}
	
	.app-dn {
	    width: 450px;
	    position: absolute;
	    top: 253px;
	    right: 70px;
	    padding-top: 32px;
	}
	
	.app-dn .tab-pane {
	    width: 148px;
	    height: 148px;
	    padding: 9px;
	    margin: 0 auto;
	    font-size: 0;
	    background-color: rgba(250, 250, 250, 0.6);
	}
	
	.app-dn .tab-pane > img {
	    width: 130px;
	    height: 130px;
	}
	
	.app-dn .app-nav-tabs {
	    padding-top: 22px;
	}
	
	.app-dn .app-nav-tabs li {
	    width: 210px;
	    height: 61px;
	    float: left;
	    margin-left: 10px;
	    margin-top: 10px;
	    font-size: 0;
	    border: #fff solid 1px;
	    -moz-border-radius: 4px;
	    -webkit-border-radius: 4px;
	    border-radius: 4px;
	    -webkit-transition: background-color 0.15s linear;
	    -o-transition: background-color 0.15s linear;
	    transition: background-color 0.15s linear;
	}
	
	.app-dn .app-nav-tabs li.active,
	.app-dn .app-nav-tabs li:hover {
	    background-color: rgba(255, 255, 255, 0.5);
	}
	
	.app-dn .app-nav-tabs li img {
	    width: 100%;
	    height: 100%;
	}
	.v5-footer {
		background-color: #E9E9E9;
	}
	.v5-footer-bottom {
	    padding: 20px 0;
	    color: #999999;
	    @extend .textC;
	}
}
@import 'footer';