{% block container %}
	<div class="wapLogin">
		<div class="box">
			<div class="title"><span class="cancleBtn">关闭</span>登录</div>
			<div class="formBox">
				<form id="login_form">
					<ul>
						<li class="username"><p><input type="text" name="account_l" id="" value="" placeholder="请输入您的手机号" /></p></li>
						<li class="userpassword"><p><input type="password" name="password_l" id="" value="" placeholder="请输入您的登录密码" /></p></li>
					</ul>
				</form>
				<div class="link">
					<a href="{% url 'signup' %}">注册新用户</a>
					<a href="{% url 'find_password' %}">忘记密码？</a>
				</div>
				<input type="button" class="btn" id="" value="登录" name="" />
			</div>
			<div class="errorTip"></div>
		</div>
	</div>
	<div class="bg indexBg"></div>
{% endblock %}
