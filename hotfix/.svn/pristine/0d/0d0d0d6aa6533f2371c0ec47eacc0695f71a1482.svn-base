    <script>

        // @score
        // 课程评分
        $(function () {

            var CSbox = $('#course_score_box');
            var ratyBox = $('.raty-box', CSbox);
            var ratyNum = $('.raty-num', CSbox);
            var iScore = {{ score }}; // 已有评分

            ratyBox.raty({
                path: '/static/images',
                starOff: 'star-off.png',
                starOn: 'star-on.png',
                starHalf: 'star-half.png',
                readOnly: true,
                number: 5, // 星星
                score: iScore // 当前评分
            });
            ratyNum.html(iScore); // 显示当前评分

        });

        // @score
        // 用户评分
        $(function () {

            var USbox = $('#user_score_box');
            var ratyBox = $('.raty-box', USbox);
            var ratyNum = $('.raty-num', USbox);
            var btn = $('.btn', USbox);
            var iScore = 0; // 默认分数

	        ratyBox.raty({
		        path: '/static/images',
		        starOff: 'star-off.png',
		        starOn: 'star-on.png',
		        starHalf: 'star-half.png',
		        readOnly: false,
		        half: false,
		        halfshow: false,
		        number: 5, // 星星
		        precision: false,
		        score: iScore, // 当前评分
		        targetType: 'score',
		        target: '#raty-num',
                targetKeep : true,
                /*mouseover: function (score) {
		            ratyNum.html(score.toFixed(1));// 显示实时评分
                },*/
                click: function (score) {
                    iScore = score.toFixed(1);
	                $('#submit_btn').removeAttr("style");
                    btn.click(function () {
                            {% if user.is_authenticated %}
                            var items = btn.closest('li').find('div');
                            items.fadeOut('normal', function () {
                                items.html('<div class="user-score-tip">已评价</div>');
                            });
                            $.post("/course/score/", {
                                'csrfmiddlewaretoken':$.cookie('csrftoken'),
                                'score': iScore,
                                'course_id':{{ cur_course.id }},
                                'user_id':{{ user.id }}
                            }, function (data) {
                                if (data.is_succeed) {
                                    var CSbox = $('#course_score_box');
                                    CSbox.html('<div><span class="raty-name">课程评分</span><span class="raty-box"></span><span class="raty-num-gp"><span class="raty-num">' + data.score + '</span>分</span></div>');
                                    items.fadeIn('normal');
                                    $('.raty-box', CSbox).raty({
                                        path: '/static/images',
                                        starOff: 'star-off.png',
                                        starOn: 'star-on.png',
                                        starHalf: 'star-half.png',
                                        readOnly: true,
                                        half: false,
                                        number: 5, // 星星
                                        precision: true,
                                        score: data.score
                                    });
                                }
                            });
                            {% else %}
                            login_popup();
                            {% endif %}
                        });
                }
            });
            ratyNum.html(iScore); // 显示当前评分

            

        });
    </script>
{% endblock %}
