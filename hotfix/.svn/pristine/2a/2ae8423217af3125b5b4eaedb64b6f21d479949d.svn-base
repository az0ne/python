{% extends "mz_wap/base.html" %}
{% block title %}忘记密码 - 麦子学院{% endblock %}
{% block keywords %}忘记密码{% endblock %}
{% block description %}忘记密码{% endblock %}
{% block custom_css %}
    <link rel="stylesheet"  href="/static/css/mz_wap/stylev1.2.css"/>
{% endblock %}
{% block container %}
		<!--<div hidden id="refer_url">{{refer_url}}</div>-->
		<div class="wapv12 register">
			<h2>找回密码</h2>
			<div class="registerForm">
				<form action="" id="registerForm">
					<ul>
						<li>
							<span><input type="text" value="" placeholder="手机号" id="telphone" /></span>
							<em id="telphonetips"></em>
						</li>
						<li>
							<div>
								<p><img id="captcha_img" src="" /></p>
								<span><input type="text" id="captcha" value="" placeholder="验证码" /></span>
							</div>
							<em id="yzmtips"></em>
						</li>
						<li>
							<div>
								<input type="button" name="" class="sendphoneyzm" id="sendphoneyzm" value="发送手机验证码" />
								<span><input type="text" id="phoneyzm" value="" placeholder="手机验证码" /></span>
							</div>	
							<em id="phoneyzmtips"></em>
						</li>
						<li>
							<span><input type="password" id="password" value="" maxlength="20" placeholder="密码 (6-20 数字,字母, 非空格)" /></span>
							<em id="passwordtips"></em>
						</li>
					</ul>
					<input type="button" class="btn" value="修改密码"/>
				</form>
			</div>
		</div>
		<div class="applyForm changePassword">
			<div class="formReviewed formSuccess">
					<span class="closed">关闭</span>
					<dl>
						<dt></dt>
						<dd>
							<strong>密码修改成功</strong>
							<p>请前往登录框输入账号密码登录吧。</p>
						</dd>
					</dl>
					<div class="footA">
						<a id="login" href="javascript:void(0)">前去登录</a>
					</div>
				</div>
			<div class="formReviewed formFail">
				<span class="closed">关闭</span>
				<dl>
					<dt></dt>
					<dd>
						<strong>密码修改失败</strong>
						<p>请稍后再试</p>
					</dd>
				</dl>
			</div>
			<div class="bg"></div>
		</div>
		{% include 'mz_wap/login.html' %}
{% endblock %}
{% block custom_script %}
		<script src="/static/js/mz_wap/zepto.1.2.0.js"></script>
		<script src="{{STATIC_URL}}js/captcha.js" type="text/javascript"></script>
		<script src="{{STATIC_URL}}js/mz_wap/find_password.js" type="text/javascript"></script>
		<script src="{{STATIC_URL}}js/mz_wap/login.js"></script>
{% endblock %}
