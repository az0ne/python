@import 'core/reset';
@import 'core/common';
@import 'core/var';
@import 'core/function';

@import 'header1';
@import 'toolbar';

/*公共样式*/
.addTeacher_banner .image,.addTeacher_container .info li:before,.addTeacher_container .works_bxslider a,.addTeacher_container .student_bxslider a,.addTeacher_container .experience .infos:before{background-image: url(../images/addTeacher_icon.png);background-repeat: no-repeat;}
.addTeacher_container{min-width:1160px;font-size: 14px;color: #666;font-family: "microsoft yahei";line-height: 1.7;background-image:url(../images/addTeacher_banner.jpg);background-repeat:no-repeat;background-position:center top;background-color:#f5f5f5;border-top: 1px solid #ededed;}
.addTeacher_container img{max-width: 100%;}
/*banner*/
.addTeacher_banner{height:470px;overflow: hidden;display: table;margin: 0 auto;}
.addTeacher_banner .teacher{width:800px;font-size: 16px;color: #fff;text-align: center;line-height: 1.6;display: table-cell;vertical-align: middle;}
.addTeacher_banner .image{width: 98px;height: 98px;background-position: -1px -267px;display: block;padding: 4px;overflow: hidden;margin: 0 auto;}
.addTeacher_banner .image img{max-width: 90px;height: auto;border-radius: 50%;}
.addTeacher_banner strong{font-size: 30px;font-weight: bold;display: block;line-height:normal;margin-top: 15px;}
.addTeacher_banner .teacher p{margin-top: 12px;max-height: 175px;overflow: hidden;}
.addTeacher_banner .teacher>a,.addTeacher_container .sendWord a{width: 180px;height: 52px;line-height: 52px;background: #5ecfba;display: block;margin: 30px auto 0;color: #fff;border-radius: 3px;}
.addTeacher_banner .teacher>a:hover,.addTeacher_container .sendWord a:hover{background:#2db8a6;}

/*info*/
.addTeacher_container .info{width: 1160px;margin:auto;background: #fff;padding:0 100px;margin: 0 auto;}
.addTeacher_container .info ul{border-bottom: 1px solid #e8e8e8;overflow: hidden;padding: 35px 108px;}
.addTeacher_container .info li{float: left;margin-left: 72px;font-size: 16px;line-height: normal;}
.addTeacher_container .info strong{display: block;font-size: 38px;font-weight: normal;margin-left: 80px;line-height: 1.1;}
.addTeacher_container .info span{font-size: 18px;}
.addTeacher_container .info li:before{width: 60px;height: 60px;display:block;content: "";float:left;margin-right:20px;background-position: -1px -62px;}
.addTeacher_container .info li:first-child:before{background-position: -1px -1px;}
.addTeacher_container .info li:last-child:before{background-position: -1px -123px;}

/*讲师作品*/
.addTeacher_container .works{width:1160px;margin:0 auto;background: #fff;overflow: hidden;padding: 40px 0 65px;}
.addTeacher_container h3{color: #333;text-align: center;font-size: 24px;font-weight: normal;}
.addTeacher_container .works_bxslider,.addTeacher_container .student_bxslider{margin: 26px auto 0;width: 940px;position: relative;}
.addTeacher_container .teach_bxslider,.addTeacher_container .stu_bxslider{width: 800px;margin: 0 auto;}
.addTeacher_container .works_bxslider li>p,.addTeacher_container .student_bxslider li>p{width:800px;height:420px;overflow:hidden;}
.addTeacher_container .works_bxslider a,.addTeacher_container .student_bxslider a{width:42px;height: 70px;background-color: #000;filter:alpha(opacity=10);;opacity: .1;display: block;position: absolute;top:160px;}
.addTeacher_container .works_bxslider a:hover,.addTeacher_container .student_bxslider a:hover{filter:alpha(opacity=30);opacity: .3;}
.addTeacher_container .works_bxslider .prev,.addTeacher_container .student_bxslider .prev{left: 0;background-position: -1px -190px;border-radius: 3px 0 0 3px;}
.addTeacher_container .works_bxslider .next,.addTeacher_container .student_bxslider .next{right: 0;background-position: -47px -190px;border-radius: 0 3px 3px 0;}
.addTeacher_container .works_bxslider p{width:800px;overflow: hidden;}
.addTeacher_container .works_bxslider .text{overflow:hidden;line-height:normal;}
.addTeacher_container .works_bxslider .text strong{font-size: 20px;color: #333;font-weight: normal;margin-top: 15px;display: block;}
.addTeacher_container .pageState{position: absolute;right: 70px;bottom: 0;font-size: 14px;color: #999;font-family: arial;letter-spacing:3px;line-height: normal;background: #fff;}
.addTeacher_container .pageState span {color: #666;font-size: 28px;}

/*讲师经历*/
.addTeacher_container .experience{width:1160px;margin:0 auto;padding-top: 50px;}
.addTeacher_container .experience ul{padding: 0 180px;margin-top: 36px;}
.addTeacher_container .experience .infos{border-left: 1px solid #d7d7d7;margin-left:85px;padding:0 0 36px 58px;position: relative;}
.addTeacher_container .experience li:last-child .infos{padding-bottom: 90px;}
.addTeacher_container .experience .infos:before{content: "";display: block;width:22px;height: 22px;background-position: -78px 0;position: absolute;left: -11px;}
.addTeacher_container .experience span{font-size: 20px;float: left;width:85px;display: block;padding-bottom: 36px;line-height:normal;}
.addTeacher_container .experience strong{font-size: 20px;color: #333;margin-bottom:12px;display: block;line-height:normal;}
.addTeacher_container .experience em{font-size: 16px;color: #333;margin-top: 10px;display: block;font-style: normal;}

/*讲师寄语*/
.addTeacher_container .sendWord{width:1160px;margin:0 auto;background: #fff;overflow: hidden;display: table;}
.addTeacher_container .sendWord dt{width:580px;height:400px;overflow:hidden;float: left;}
.addTeacher_container .sendWord img{width: 100%;display: block;}
.addTeacher_container .sendWord dd{padding-right:65px;width:525px;display:table-cell;vertical-align:middle;margin-left: 635px;}
.addTeacher_container .sendWord h3{text-align: left;}
.addTeacher_container .sendWord p{font-size: 18px;line-height: 1.6;margin-top: 12px;max-height: 280px;overflow: hidden;}
.addTeacher_container .sendWord a{margin: 0;display: inline-block;text-align: center;margin-top: 25px;font-size: 16px;}

/*学生作品*/
.addTeacher_container .stu_works{padding: 45px 0 100px;overflow: hidden;}
.addTeacher_container .student_bxslider{margin-top: 30px;}
.addTeacher_container .stu_works .pageState{width:100%;right: inherit;bottom: -50px;text-align: center;background: none;}

@import 'footer';