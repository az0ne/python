{% extends "mz_nadmin/base.html" %}


{% block right %}
{% include "mz_nadmin/parts/courses_breadcrumb.html" %}


<div class="tabbable">
{% include "mz_nadmin/parts/course_tabs.html" %}

<div class="tab-content">
    <div class="tab-pane active">

    {% include "mz_nadmin/modules/msgs.html" %}
    {% include "mz_nadmin/modules/form_alert.html" %}

    <form class="form-horizontal" role="form" action="#" method="post">

        {% csrf_token %}

        <div class="form-group {% if form.is_active.errors %}has-error{% endif %}">
            <label class="col-md-2 control-label text-left" for="search_keywords">
                &nbsp;
            </label>

            <div class="col-md-8">
                <label class="checkbox">
                    {{ form.is_active }}
                    开启/关闭模块
                </label>
                {% for error in form.is_active.errors %}
                    {{ error }}
                {% endfor %}
            </div>
        </div>

        <div class="form-group {% if form.description.errors %}has-error{% endif %}">
            <label class="col-md-2 control-label" for="search_keywords">
                {{ form.description.label }}
            </label>
            <div class="col-md-5">
                {{ form.description }}
                <span class="help-block">
                {% for error in form.description.errors %}
                    {{ error }}
                {% endfor %}
                </span>
            </div>
        </div>

        <div class="row">
            <hr>
        </div>

        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button type="submit" class="btn btn-sm btn-primary">保存</button>
            </div>
        </div>
    </form>

    </div>
</div>
</div>
{% endblock %}




